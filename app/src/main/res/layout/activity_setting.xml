<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.hyochan.dontech.activities.SettingActivity">
    <include
        layout="@layout/title_back"/>
    <!-- body layout -->
    <RelativeLayout
        android:id="@+id/rel_body"
        android:layout_marginTop="?attr/actionBarSize"
        android:background="@color/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:id="@+id/first_line"
            android:layout_marginTop="35dp"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_marginBottom="0.3dp"
            android:background="@color/disabled"
            />
        <ListView
            android:id="@+id/list_setting"
            android:layout_below="@+id/first_line"
            android:layout_width="match_parent"
            android:divider="@drawable/list_divider"
            android:dividerHeight="0.3dp"
            android:layout_height="match_parent"
            android:layout_above="@+id/second_line"/>
        <View
            android:id="@+id/second_line"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="35dp"
            android:background="@color/disabled"
            />
    </RelativeLayout>
</RelativeLayout>
